    "csswring": "^3.0.5",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "normalize.css": "^3.0.3",
    "postcss": "^4.1.11",
    "postcss-import": "^5.2.2",
    "react": "^0.13.3",
    "react-tools": "^0.13.3",
    "static-site-generator-webpack-plugin": "^1.0.0",
    "webpack": "^1.9.8",
    "webpack-dev-server": "^1.9.0"
